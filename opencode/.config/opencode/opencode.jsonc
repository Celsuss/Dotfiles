{
    "$schema": "https://opencode.ai/config.json",
    "theme": "gruvbox",
    "permission": {
        "*": "ask",
        "grep *": "allow",
        "glob *": "allow",
        "read": {
            "*": "allow",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.env.example": "allow"
        }
    },
    "model": "gpt-5.1-codex-max",
    "small_model": "gpt-5.1-codex-mini",

    "provider": {
        "litellm": {
            "name": "liteLLM",
            "npm": "@ai-sdk/openai-compatible",
            "options": {
                "baseURL": "https://aeal-0001.int.tele2.com/v1"
            },
            "models": {
                "gpt-5.1-codex-max": {
                    "name": "gpt-5.1-codex-max",
                    "options": {
                        "reasoningEffort": "high",
                        "parallelToolCalls": false,
                        "include": [
                            "reasoning.encrypted_content"
                        ]
                    }
                },
                "gpt-5.1-codex-mini": {
                    "name": "gpt-5.1-codex-mini"
                },
                "gpt-5.1": {
                    "name": "gpt-5.1"
                },
                "claude-haiku-4-5@20251001": {
                    "name": "claude-haiku-4-5@20251001"
                }
            }
        },
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "deepseek-coder-v2:16b": {
                    "name": "deepseek-coder-v2:16b"
                },
                "deepseek-r1:14b": {
                    "name": "deepseek-r1:14b"
                }
            }
        }
    },

    "agent": {
        "build": {
            "mode": "primary",
            "model": "litellm/claude-haiku-4-5@20251001",
            "tools": {
                "write": true,
                "edit": true,
                "bash": true
            }
        },
        "plan": {
            "mode": "primary",
            "model": "litellm/gpt-5.1",
            "tools": {
                "write": false,
                "edit": false,
                "bash": false
            }
        },
        "code-reviewer": {
            "mode": "subagent",
            "model": "litellm/gpt-5.1",
            "prompt": "{file:./prompts/reviewer.md}",
            "tools": {
                "write": false,
                "edit": false,
                // "bash": "ask",
                "read": true
            },
            "temperature": 0.2
        },
        "tf-reviewer": {
            "mode": "subagent",
            "model": "litellm/gpt-5.1",
            "prompt": "{file:./prompts/tf-reviewer.md}",
            "tools": {
                "write": false,
                "edit": false,
                // "bash": "ask",
                "read": true
            },
            "temperature": 0.2
        }

    }
}
